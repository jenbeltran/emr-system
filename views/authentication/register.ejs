<%- include('../partials/header'); -%>

<% if(error && error.length > 0) { %>
<div class="alert alert-warning" role="alert">
    <%= error %>
</div>
<% } %>

<div class="container form-title">
    <h1>Register a Care Provider</h1>
</div>

<div class="container card bg-light" style="width: 40rem;">
    <form action="/register" method="POST">
        <div class="form-group">
            <label>First Name</label>
            <input type="text" name="provider_fname" class="form-control" placeholder="Enter first name">
        </div>
        <div class="form-group">
            <label>Last Name</label>
            <input type="text" name="provider_lname" class="form-control" placeholder="Enter last name">
        </div>
        <div class="form-group">
            <label>Username</label>
            <input type="text" name="provider_username" class="form-control" placeholder="Enter username">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" name="password" class="form-control" placeholder="Enter password">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" name="confirmpassword" class="form-control" placeholder="Enter password">
        </div>
        <div class="form-check">
            <input type="checkbox" name="super_admin" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Add as super admin user</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


<%- include('../partials/footer'); -%>