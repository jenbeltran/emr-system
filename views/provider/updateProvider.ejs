<%- include('../partials/header'); -%>


<div class="container form-title">
    <h1>Update Care Provider Details</h1>
</div>

<% for(let i=0; i < results.length; i++) {%>

<div class="container card bg-light" style="width: 40rem;">
    <form action="/provider/<%=results[i].careprovider_id%>?_method=PUT" method="POST">
        <div class="form-group">
            <label>First Name</label>
            <input type="text" name="provider_fname" class="form-control" placeholder="Enter first name" value="<%= results[i].careprovider_firstname %>">
            <input type="hidden" name="_method" value="PUT">
        </div>
        <div class="form-group">
            <label>Last Name</label>
            <input type="text" name="provider_lname" class="form-control" placeholder="Enter last name" value="<%= results[i].careprovider_lastname %>">
            <input type="hidden" name="_method" value="PUT">
        </div>
        <div class="form-group">
            <label>Username</label>
            <input type="text" name="provider_username" class="form-control" placeholder="Enter username" value="<%= results[i].careprovider_username %>">
            <input type="hidden" name="_method" value="PUT">
        </div>
        <div class="form-check">
            <input type="checkbox" name="super_admin" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Super admin user</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<% } %>


<%- include('../partials/footer'); -%>