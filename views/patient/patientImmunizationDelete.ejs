<%- include('../partials/header'); -%>


<div class="container form-title">
    <h1>Delete Patient Immunization Record</h1>
</div>

<% result.forEach((patient, index) => { %>
<div class="container card bg-light" style="width: 40rem;">
    <form action="/patient/ImmunizationDelete" method="POST">
        <div class="form-group">
          <b> <label>Vaccine Name</label></b>
        </div>
        <div class="form-group">
            <label><%=patient.vaccine_name%></label><br/>
        </div>
        <div class="form-group">
        <b>  <label>Date Completed</label></b><br/>
            <label><%=patient.date_completed%></label>
        </div>
        <div class="form-group">
        <b>  <label>Date Next Visit</label></b><br/>
            <label><%=patient.date_next_visit%></label>
        </div>
        <button type="submit" class="btn btn-primary">Are You Sure You Want to Delete?</button>
    </form>
</div>
<% }) %>

<%- include('../partials/footer'); -%>