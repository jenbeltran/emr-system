<%- include('../partials/header'); -%>


<div class="container form-title">
    <h1>Delete Patient Billing Information</h1>
</div>

<% result.forEach((patient, index) => { %>
<div class="container card bg-light" style="width: 40rem;">
    <form action="/patient/BillingDelete" method="POST">
        <div class="form-group">
            <b><label>Insurance Provider</label></b><br/>
            <label><%=patient.ins_provider%></label>
        </div>
        <div class="form-group">
           <b> <label>Insurance Policy</label></b><br/>
            <label><%=patient.ins_policy%></label>
        </div>
        <div class="form-group">
        <b><label>Credit Card Number</label></b><br/>
            <label><%=patient.creditcard_num%></label>
        </div>
        <div class="form-group">
        <b><label>Credit Card Security Code</label></b><br/>
            <label><%=patient.creditcard_code%></label>
        </div>
        <div class="form-group">
        <b>  <label>Expiration Date</label></b><br/>
            <label><%=patient.creditcard_exp%></label>
        </div>
        <button type="submit" class="btn btn-primary">Are You Sure You Want to Delete?</button>
    </form>
</div>
<% }) %>

<%- include('../partials/footer'); -%>