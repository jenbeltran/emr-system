<%- include('../partials/header'); -%>


<div class="container form-title">
    <h1>Update Patient Prescription Record</h1>
</div>

<% result.forEach((patient, index) => { %>
<div class="container card bg-light" style="width: 40rem;">
    <form action="/patient/PrescUpdate" method="POST">
        <div class="form-group">
            <label>Prescription Name</label>
        </div>
        <div class="form-group">
            <label><%=patient.prescription_name%></label>
        </div>
        <div class="form-group">
            <label>Dose Quantity</label>
            <input type="text" name="dose_qty" class="form-control" placeholder="Enter Dose Quantity" value="<%=patient.dose_qty%>">
        </div>
        <div class="form-group">
            <label>Days Supply</label>
            <input type="text" name="days_supply" class="form-control" placeholder="Enter Days Supply" value="<%=patient.days_supply%>">
        </div>
        <div class="form-group">
            <label>Administration</label>
            <input type="text" name="route_of_admin" class="form-control" placeholder="Enter Administration" value="<%=patient.route_of_admin%>">
        </div>
        <div class="form-group">
            <label>Date Filled</label>
            <input type="text" name="date_filled" class="form-control" placeholder="Enter Date Filled" value="<%=patient.date_filled%>">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<% }) %>

<%- include('../partials/footer'); -%>