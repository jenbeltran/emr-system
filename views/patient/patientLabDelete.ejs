<%- include('../partials/header'); -%>


<div class="container form-title">
    <h1>Delete Patient Prescription Record</h1>
</div>

<% result.forEach((patient, index) => { %>
<div class="container card bg-light" style="width: 40rem;">
    <form action="/patient/LabDelete" method="POST">
        <div class="form-group">
          <b> <label>Test Name</label></b>
        </div>
        <div class="form-group">
            <label><%=patient.test_name%></label><br/>
        </div>
        <div class="form-group">
        <b>  <label>Date Completed</label></b><br/>
            <label><%=patient.date_completed%></label>
        </div>
        <div class="form-group">
        <b>  <label>Result</label></b><br/>
            <label><%=patient.result%></label>
        </div>
        <div>
        <b>  <label>Abnormal</label></b><br/>
            <label><% if (patient.abnormal==1){ %>Yes <% } else {%> No <% }; %></label>
        </div>
        <button type="submit" class="btn btn-primary">Are You Sure You Want to Delete?</button>
    </form>
</div>
<% }) %>

<%- include('../partials/footer'); -%>