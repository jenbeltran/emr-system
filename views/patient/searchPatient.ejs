<%- include('../partials/header'); -%>

<% if(success && success.length > 0) { %>
<div class="alert alert-success" role="alert">
    <%= success %>
</div>
<% } %>
<% if(error && error.length > 0) { %>
    <div class="alert alert-warning" role="alert">
        <%= error %>
    </div>
    <% } %>
<script>
    

       function togglesearchOption() {
  var x = document.getElementById("searchName");
  var y = document.getElementById("searchHealthcard");
  var btn = document.getElementById("toogleButton");

  if (x.style.display === "none") {
    x.style.display = "block";
    y.style.display = "none";
    btn.innerHTML ="CLICK HERE TO SEARCH USING PATIENT's HEALTH CARD";
  } else {
    x.style.display = "none";
    y.style.display = "block";
    btn.innerHTML ="CLICK HERE TO SEARCH USING PATIENT's NAME";
  }
}

$(document).ready(function(){

    setDefaultsearch();

});
</script>
<div class="container form-title">
    <h1>Search Patient</h1>
</div>

<div class="container card bg-light" style="width: 40rem;">
    <div class="form-group">
        <button class="btn btn-success" class="btn btn-secondary" id="toogleButton" onclick="togglesearchOption()">
            CLICK HERE TO SEARCH USING HEALTH ID</button>
    </div>
    <form action="/patient/search" method="POST" id="searchName">
        <div class="form-group">
            <label>Patient First Name</label>
            <input type="text" name="user_fname" class="form-control" placeholder="Enter first name">
        </div>
        <div class="form-group">
            <label>Patient Last Name</label>
            <input type="text" name="user_lname" class="form-control" placeholder="Enter last name">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <input type="hidden" id="search" name="search" value="SearchByName">
    </form>

    <form action="/patient/search" method="POST" id="searchHealthcard">
        <div class="form-group">
            <label>Patient Health Card Number</label>
            <input type="text" name="user_healthcard" class="form-control" placeholder="Enter heatlh card number">
        </div>
            
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<%- include('../partials/footer'); -%>
