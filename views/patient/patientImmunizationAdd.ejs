<%- include('../partials/header'); -%>

<% if(error && error.length > 0) { %>
    <div class="alert alert-warning" role="alert">
        <%= error %>
    </div>
    <% } %>
    

<div class="container form-title">
    <h1>Add Patient Immunization Records</h1>
</div>

<div class="container card bg-light" style="width: 40rem;">
    <form action="/patient/ImmunizationAdd" method="POST">
        <div class="form-group">
                <label>Vaccine Name</label>
                <input type="text" name="vaccine_name" class="form-control" placeholder="Enter Vaccine Name">
        </div>
        <div class="form-group">
            <label>Date Completed</label>
            <input type="text" name="date_completed" class="form-control" placeholder="Enter (YYYY-MM-DD) Date Completed">
        </div>
        <div class="form-group">
            <label>Date Next Visit</label>
            <input type="text" name="date_next_visit" class="form-control" placeholder="Enter (YYYY-MM-DD) Date Cext Visit">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


<%- include('../partials/footer'); -%>