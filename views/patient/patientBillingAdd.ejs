<%- include('../partials/header'); -%>

<% if(error && error.length > 0) { %>
    <div class="alert alert-warning" role="alert">
        <%= error %>
    </div>
    <% } %>
    

<div class="container form-title">
    <h1>Add Patient Billing Information</h1>
</div>

<div class="container card bg-light" style="width: 40rem;">
    <form action="/patient/BillingAdd" method="POST">
        <div class="form-group">
                <label>Insurance Provider</label>
                <input type="text" name="ins_provider" class="form-control" placeholder="Enter Insurance Provider">
        </div>
        <div class="form-group">
            <label>Insurance Policy</label>
            <input type="text" name="ins_policy" class="form-control" placeholder="Enter Insurance Policy">
        </div>
        <div class="form-group">
            <label>Credit Card Number</label>
            <input type="number" name="creditcard_num" class="form-control" placeholder="Enter Credit Card Number">
        </div>
        <div class="form-group">
                <label>Credit Card Security Code</label>
                <input type="number" name="creditcard_code" class="form-control" placeholder="Enter Security Code">
            </div>
        <div class="form-group">
            <label>Expiry Date</label>
            <input type="text" name="creditcard_exp" class="form-control" placeholder="Enter (YYYY-MM-DD) Expiry Date">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


<%- include('../partials/footer'); -%>